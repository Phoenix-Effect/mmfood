{% include 'head.jinja' %}

<body>
    <section class="hero welcome is-small">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    Hello,
                </h1>
                <h2 class="subtitle">
                    Recommendations overheard at the watercooler.
                </h2>
            </div>
        </div>
    </section>
    <section class="section">
        <div class="container">
            <div class="columns">
                <div class="column">
                    <div class="box content">

                        <div class="columns">
                            <div class="column is-2">

                                <img class="is-rounded" title="{{ profile.photo }}"
                                    src="/static/profile/{% if profile.photo %}{{ profile.photo }}{% else %}anon.png{% endif %}">

                            </div>
                            <div class="column">
                                <p class="title is-3">{{ profile.name }}</p>
                                <p class="subtitle is-5">{{ profile.bio }}</p>
                            </div>
                        </div>
                    </div>

                    <div class="box content">
                        <div class="columns is-multiline">
                            {% for review in reviews %}
                            <div class="column is-one-third-desktop is-half-tablet is-full-mobile is-flex is-narrow">
                                <div class="card">
                                    <header class="card-header">
                                        <h3 class="card-header-title m-2">
                                            {{ review.restaurant }}
                                        </h3>
                                        <a href="#" class="card-header-icon" aria-label="more options">
                                            <span class="icon">
                                                <i class="fas fa-angle-down" aria-hidden="true"></i>
                                            </span>
                                        </a>
                                    </header>
                                    <div class="card-content p-3">
                                        <div class="content">
                                            <article class="media ">
                                                <figure class="media-left ml-0 mr-3 mt-1">
                                                    <p class="image is-48x48">
                                                        <img class="is-rounded" title="{{ profile.photo }}"
                                                            src="/static/profile/{% if profile.photo %}{{ profile.photo }}{% else %}anon.png{% endif %}">
                                                    </p>
                                                </figure>
                                                <div class="media-content">
                                                    <div class="content">
                                                        <p>
                                                            <a class="has-text-weight-bold">{{ profile.name }} </a>
                                                            <br>
                                                            {{ review.review }}
                                                        </p>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                    </div>
                                    <footer class="card-footer">
                                        <div class="card-footer-item taggers">
                                            <div class="tags">
                                                {% for g in review.tags %}
                                                <span class="tag is-info is-rounded mr-2">
                                                    {{ g }}
                                                </span>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </footer>
                                </div>
                            </div>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
</body>

</html>